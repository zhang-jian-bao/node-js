<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,
    minimum-scale=1,maximum-scale=1,user-scalable=no">
    <title>登录</title>
</head>
<body>
         <!--<form action="/" method="get">-->
             <label for="a">用户名：</label>
             <input type="text" placeholder="请输入用户名" id="a"><br>
             <label for="b">密码：</label>
             <input type="text" placeholder="请输入密码" id="b"><br>
             <!--<input type="button" value="登录" id="bt">-->
         <button id="bt">登录</button>
         <!--</form>-->
</body>
</html>
<script src="js/jquery-3.4.1.js"></script>
<script>
    $("#bt").click(function () {
        var a=$("#a").val();
        var b=$("#b").val();
        $.ajax({
            url:"/dologin",
            type:"POST",
            data:{
                yh:a,
                mm:b
            },
            success: function (ret) {
                console.log(ret);
                if(ret=="成功"){
                   location.href="/"
                }else{
                    window.location.href="/login"
                }
            },error: function (error) {
                console.log(error)
            }
        })
    })
</script>