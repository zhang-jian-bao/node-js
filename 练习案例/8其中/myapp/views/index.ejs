<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>注册</title>
  <style>
    fieldset{
      margin: 100px auto;
      width: 20%;
    }
  </style>
</head>
<body>
       <fieldset>
         <legend>注册页面</legend>
         <p>
           <label for="a">姓名：</label>
           <input type="text" placeholder="请输入姓名" id="a">
         </p>
         <p>
           <label for="b">性别：</label>
           <input type="radio" name="sex" value="男" class="b" checked="checked"> 男
           <input type="radio" name="sex" value="女"> 女
         </p>
         <p>
           <label for="c">年龄：</label>
           <input type="text" placeholder="请输入年龄" id="c">
         </p>
         <p>
           <label for="d">电话：</label>
           <input type="text" placeholder="请输入电话" id="d">
         </p>
         <button class="bt">注册</button>
       </fieldset>
</body>
</html>
<script src="js/jquery-3.4.1.js"></script>
<script>


   $(".bt").click(function () {
     var aa=new Date();
     var time=aa.toLocaleString();
     var a=$("#a").val();
     var b=$("input:checked").val();
     var c=$("#c").val();
     var d=$("#d").val();
     alert(a); alert(b); alert(c); alert(d);
     $.ajax({
       url:"/api/write",
       data:{
         name:a,
         sex:b,
         age:c,
         tel:d,
         date:time
       },
       success:function (ret) {
         console.log(ret);
         if(ret.code==0){
           location.href="/list"
         }
       },error:function (msg) {
         console.log(msg)
       }
     })
   })
</script>
